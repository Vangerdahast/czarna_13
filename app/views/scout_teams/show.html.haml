=content_for :title do
	=@scout_team.name
=content_for :content do
	%p.right
		=link_to "Dodaj członka", new_scout_team_member_path
	-if @scout_team.photo.present?
		.image_wrapper_01=image_tag(@scout_team.photo)
	%p=@scout_team.team_leader
	%p=@scout_team.body
	%p=@scout_team.active
	
	%h3 
		Członkowie:
	-@scout_team.scout_team_members.each do |stm|
		%p=link_to stm.first_name + " " + stm.last_name, stm
		