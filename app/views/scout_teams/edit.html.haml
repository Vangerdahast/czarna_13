=content_for :title do
	Uaktualnij drużynę

=content_for :content do
	=form_for @scout_team do |f|
		=f.label :name, "Nazwa drużyny:"
		%br=f.text_field :name
		
		=f.label :meeting_day, "Zbiórki odbywaja się w:"
		%br=f.select :meeting_day, %w[Poniedziałek Wtorek Środa Czwartek Piątek Sobota Niedziela], {:include_blank => true}
		
		=f.label :meeting_time, "o godzinie:"
		%br=f.time_select :meeting_time
		
		%br=f.label :came_into_being, "Powstała w:"
		=f.date_select :came_into_being, :use_month_numbers => "true", :start_year => 1981, :end_year => Time.now.year
	
		%br
		%br=f.label :team_leader, "Drużynowy:"
		=f.text_field :team_leader
		
		%br=f.label :sidekick, "Przyboczny/Przyboczni"
		=f.text_field :sidekick
	
		%br=f.label :active, "Aktywna?"
		%br=f.check_box :active 
	
		%br=f.label :body, "Opis lub historia drużyny:"
		%br=f.tinymce :body
	
		%br=f.label :photo, "Zdjęcie drużyny:"
		%br=f.text_field :photo
	
		%br=f.submit "Uaktualnij drużynę!"